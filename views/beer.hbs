<section class = "random-beer-container">
    {{#with beer}}
        <div class = "random-img-container">
            <img src={{image_url}} alt="No image">
        </div>
        <div class = "random-info-container">
            {{>beerpartial}}
            <h2>Food pairing</h2>
            <ul>
                {{#each food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
            </ul>
            <h2>Brewer tips</h2>
            <p>
                {{brewers_tips}}
            </p>
        </div>
    {{/with}}
</section>